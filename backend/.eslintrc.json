{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "_" }
    ],
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "quotes": [
      1,
      "double",
      {
        "avoidEscape": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
